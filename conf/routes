# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /ws                         controllers.Application.socket()
GET		/add						controllers.Application.add()
GET		/addModule/:moduleClass		controllers.Application.addModule(moduleClass: String)
POST 	/saveModule					controllers.Application.saveModule()
GET		/big/:id					controllers.Application.showBig(id: Integer)
GET		/ws/big/:id					controllers.Application.bigSocket(id: Integer)
POST	/settings					controllers.Application.settings()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
